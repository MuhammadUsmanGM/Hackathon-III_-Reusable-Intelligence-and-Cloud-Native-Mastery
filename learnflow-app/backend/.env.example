# LearnFlow Backend Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:secretpassword@localhost:5432/learnflow

# Security Settings
SECRET_KEY=your-super-secret-key-here-make-it-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=learnflow-group

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Dapr Configuration
DAPR_HTTP_PORT=3500
DAPR_GRPC_PORT=50001

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Security Headers
SECURITY_CSRF_ENABLED=true
SECURITY_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Application Settings
APP_NAME=LearnFlow Backend
APP_VERSION=1.0.0
DEBUG=false